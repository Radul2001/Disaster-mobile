<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0047AB"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="276dp"
        android:layout_height="337dp"
        android:contentDescription="App Icon"
        android:src="@drawable/icon" />

    <Button
        android:id="@+id/contactBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#1441C8"
        android:text="@string/Emergency_Contact"
        android:textSize="24sp" />

    <Button
        android:id="@+id/addDisasterBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/gradient_button_blue"
        android:text="@string/Disaster_Button"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="71dp" />

</LinearLayout>
